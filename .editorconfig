# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Treat all .cs files in this API/Database/Migrations as generated code
[API/Database/Migrations/*.cs]
generated_code = true
dotnet_diagnostic.CS8981.severity = none
